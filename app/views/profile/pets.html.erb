<div class="ui container">
	<div class="ui vertical stripe segment">

		<%= link_to "Add a Pet", new_pet_path, class:"ui right floated green button" %>

		<div class="ui divided items">
			<% if not @pets.nil? %>
				<% @pets.each do |pet| %>
					<div class="item">
						<div class="ui small image">
							<%= image_tag pet.image.url(:medium), class:"ui bordered rounded image" %>
						</div>
						<div class="top aligned content">
							<%= link_to pet.name, pet_path(pet), class: "header"%>
							<div class="meta">
								<span><i class="home icon"></i><%= pet.profile.city %>, <%= pet.profile.state %></span>
							</div>
							<div class="description">
								<span>Gender: <%= pet.gender %></span>
								<br/>
								<span>Breed: <%= pet.breed %></span>
								<br/>
								<span>Details: <%= pet.details %></span>
							</div>
							<div class="extra">
								<%= link_to "Delete", pet_path(pet), method: :delete, class:"ui right floated red button" %>
								<%= link_to "Edit", edit_pet_path(pet), class:"ui right floated yellow button" %>
								<%= link_to "View", pet_path(pet), class:"ui right floated teal button" %>
							</div>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
