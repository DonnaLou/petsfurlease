<% provide(:title, @profile.firstName + " " + @profile.lastName ) %>

<div class="ui container">
	<div class="ui vertical stripe segment">
		<div class="ui two column grid">
			<div class="four wide column">
				<% if (@profile.image) %>
					<%= image_tag @profile.image, class:"ui bordered rounded image" %>
				<% else%>
					<%= image_tag "wireframeImage.png", class:"ui bordered rounded image" %>
				<% end %>
				<h3><%= @profile.firstName %> <%= @profile.lastName %></h3>
				<p>
					<i class="marker icon"></i>
					<%= @profile.city %>, <%= @profile.state %> <%= @profile.zip %>
				</p>

				<% if @profile.is_volunteer %>
				<p>
					<i class="paw icon"></i>Volunteer Pet Sitter
				</p>
				<% end %>

				<p>
					<i class="thumbs outline up icon"></i><a href="#UserReviews">Read Reviews</a>
				</p>
				<p>
					<i class="mail icon"></i><a href="#" id="composeMsg">Send a Message</a>
				</p>
				<% if(current_user != @profile.user) %>
					<p>
						<button class="positive ui button" id="writeReviewBtn">
							<i class="pencil icon"></i> Write a Review
						</button>
					</p>
				<% else %>		
          <%= link_to "Edit Profile", edit_profile_path(current_user.profile.id), class: "ui yellow button" %>
				<% end %>
			</div>
			<div class="twelve wide column">
				<div class="ui segment">
					<h4>Experience with animals:</h3>
					<p>
						<%= @profile.description %>
					</p>
				</div>
				<% if @profile.pets.count > 0 %>
				<div class="ui segment">
					<h4>Pet Profiles:</h4>
					<div class="ui items">
						<% @profile.pets.each do |pet| %>
						<div class="item">
							<div class="ui small image">
								<%= image_tag pet.image.url(:medium), class:"ui bordered rounded image" %>
							</div>
							<div class="content">
								<%= link_to pet.name, pet, class:"header"%>
								<div class="description">
									<p>
										<%= pet.details %>
									</p>
								</div>
							</div>
						</div>
						<% end %>
					</div>
				</div>
				<% end %>

				<div class="ui segment">
					<h4>Reviews: <a class="hidden" name="UserReviews"></a></h4>
					<% if @profile.reviews.count == 0 %>
						<h4 class="ui grey header">No Reviews Available</h4>
					<% end %>

					<% @profile.reviews.each do |r| %>
						<div class="ui comments">
							<div class="comment">
								<a class="avatar" style="height:2.5em;"> <img src="..\app\assets\images\Portraits\pewpew.png"> </a>
								<div class="content">
									<%= link_to r.user.profile.full_name, profile_path(r.user.profile), html_options={class:"author"} %>
									<div class="ui star rating" data-rating=<%= r.rating.to_s%>></div>
									<div class="metadata">
										<div class="date">
											<%= r.created_at.strftime("%m-%d-%Y") %>
										</div>
									</div>
									<div class="text">
										<%= r.details%>
									</div>
								</div>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>

	<%= render partial: "shared/composeMessage", locals:{name: @profile.firstName + " " + @profile.lastName} %>
	
	<%= render partial: "shared/writeReview", locals: {name: @profile.firstName + " " + @profile.lastName, sendBtnId:'sendProfileReview'}%>
</div>