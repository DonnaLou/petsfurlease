<%if @pets.count<1 %>
  <div class="ui negative message">
    <div class="header">
      Sorry! No pets matching current criteria. Please try again with another search criteria.
    </div>
  </div>
<% else %>
  <% @pets.each do |pet| %>
    <div class="item">
      <div class="ui small image">
        <%= image_tag pet.image.url(:medium), class:"ui bordered rounded image" %>
      </div>
      <div class="top aligned content">
        <div class="header"><%= pet.name %></div>
        <div class="meta">
          <span><i class="home icon"></i><%= pet.profile.city %>, <%= pet.profile.state %></span>
        </div>
        <div class="description">
          <span>Gender: <%= pet.gender %></span><br/>
          <span>Breed: <%= pet.breed %></span><br/>
          <span>Details: <%= pet.details %></span>
        </div>
        <div class="extra">
          <%= link_to "View Profile", pet_path(pet), class:"ui right floated teal button" %>
          <div class="ui right floated yellow button">
            Message owner
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

