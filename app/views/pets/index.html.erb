<% provide(:title, "Search Pets") %>

 <div class="ui container">
  <div class="ui vertical stripe segment">
    <div class="ui top attached tabular menu">
      <a class="item active" data-tab="first">Find Pets</a>
      <a class="item" data-tab="second">Find Sitters</a>
    </div>

    <div class="ui bottom attached tab segment active" data-tab="first">
      <%= form_tag("/pets/search", remote: true, method: "get", id:"petSearchForm") do %>
        <div class="ui action input">
          <%= text_field_tag(:zip, nil, placeholder: "Zip code...") %>
          <%= select_tag(
            :species, 
            '<option value="Dog">Dog</option>
            <option value="Cat">Cat</option>
            <option value="Reptile">Reptile</option>
            <option value="Other">Other</option>'.html_safe, 
            class: "ui compact selection dropdown", 
            style: "padding: 0.5em !important;") %>
          <button type="submit" class="ui icon button" id="petSearchFormBtn"><i class="search icon"></i></button>
        </div>
      <% end %>
    </div>

    <div class="ui bottom attached tab segment" data-tab="second">
      <%= form_tag("/profile/search", remote: true, method: "get") do %>
        <div class="ui action input">
          <%= text_field_tag(:zip, nil, placeholder: "Zip code...") %>
          <button type="submit" class="ui icon button"><i class="search icon"></i></button>
        </div>
      <% end %>
    </div>
    <div class="ui divided items" id="petSearchResults">
      <%= render "petSearchList" %>
    </div>

  </div>
</div>
