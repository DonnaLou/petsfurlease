<!-- Page Contents -->
<div>
  <div class="ui vertical masthead center aligned segment" id="homeBanner">
    <div class="ui vertical stripe segment" style="padding-bottom:25px; border-bottom:none" >
      <div class="ui right aligned stackable grid container">
        <div class="six wide column">
          <h1 class="ui header" style="font-size:4em;">Pets Fur Lease</h1>
          <div class="ui segment" style="background-color: rgba(256, 256, 256, 0.3)">
            <p style="color:#A07956">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. 
            </p> 
          </div>
        </div>
        <div class="ui hidden divider"></div>
      </div>
    </div>
  </div>  

  <div class="ui vertical stripe segment">
    <div class="ui middle aligned equal width stackable grid container">
     <div class="center aligned row">
        <div class="column">
          <div class="ui raised segment">
            <% if !user_signed_in? %>
              <%= link_to new_user_session_path, style:"text-decorator:none; color:black" do %>
                  <i class="huge user icon"></i>
                  <div class="content">
                    <h3>Create a profile </h3>
                    <div>Tell us about yourself and your pets.</div>
                  </div>
              <% end %>
            <% else %>
              <%= link_to new_profile_path do %>
                <i class="huge user icon"></i>
                <div class="content">
                  <h3>Create a profile </h3>
                  <div class="description">Tell us about yourself and your pets.</div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="column">
          <div class="ui raised segment">
            <i class="huge mail icon"></i>
            <div class="content">
              <h3>Connect with others</h3>
              <div class="description">Find fellow animal lovers in your area.</div>
            </div>
          </div>
        </div>
        <div class="column">
          <div class="ui raised segment">
            <i class="huge paw icon"></i>
            <div class="content">
              <h3>Quality time with friends</h3>
              <div class="description">Give some belly rubs and treats.</div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="center aligned column">
          <%= link_to new_user_session_path do%>
            <div class="ui huge blue button">Join us for Free</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="ui vertical stripe quote segment">
    <div class="ui two column middle aligned very relaxed stackable grid">
      <div class="center aligned row">
        <div class="column">
          <h3>I'm a pet owner looking for help</h3>
          <p>  
            Put something here to describe<br/>
            the benefits a pet owner would get <br/>
            from using this service <br/>
          </p>
          <div class="row">
            <div class="ui action input">
              <input type="text" placeholder="Zip code..." id="userZip">
              <div type="submit" class="ui icon button" onClick="userZipSearch()"><i class="search icon"></i></div>
            </div>
          </div>
        </div>
          <div class="ui vertical divider">
            Or
          </div>
        <div class="column">
          <h3>I'm seeking a furry friend</h3>
          <p>
            Write something here to describe<br/>
            what a pet seeker would get out of this<br/>
            Ex. helping neighbors, experience having diff pets,
            Spending time with some animals
          </p>
          <div class="ui action input">
            <input type="text" placeholder="Zip code..." id="petZip">
            <select class="ui compact selection dropdown" style="height:auto !important;" id="petSpecies">
              <option value="guineapig">Guinea Pig</option>
              <option value="Rabbit">Rabbits</option>
              <option value="Dog">Dogs</option>
              <option value="Cat">Cats</option>
              <option value="Other">Other</option>
            </select>
            <div type="submit" class="ui icon button" onClick="petZipSearch()"><i class="search icon"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>

