
<div class="ui aligned center aligned grid">
  <div class="ui vertical stripe middle ">
    <div class="column">
      <h2 class="ui teal header">
        <div class="content">Pets fur Lease: Reset your password</div>
      </h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "ui large form" }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="ui stacked segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "New Password (" + @minimum_password_length.to_s + " characters minimum)" %>
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "New Password Confirmation"%>
            </div>
          </div>

          <%= f.submit "Reset my password", :class => 'ui fluid large teal submit button' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
