<% provide(:title, "Edit Account Settings") %>

<div class="ui container">
  <div class="ui vertical stripe segment">

    <%= form_for(resource, as: resource_name,  url: registration_path(resource_name), html: { class:"ui form",method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="ui two column stackable grid">
        <div class="column">
          <h2>Edit Account Information</h2>

          <h4>Email</h4>

          <div class="field">
            <%= f.email_field :email, autofocus: true %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <h4>Password </h4> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <div class="field">
            <h4>Password Confirmation </h4>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>

          <div class="field">
            <h4>Current Password </h4>
            <i>(we need your current password to confirm your changes)</i>
            <%= f.password_field :current_password, autocomplete: "off" %>
          </div>

          <div class="actions">
            <%= f.submit "Update", class:"ui teal button right floated" %>
          </div>
        <% end %>
      </div>
      <div class="column">
        <h3>Cancel my account</h3>
        <h5>I want to delete my Pets fur Lease profile and all my registered pet profiles. I understand that this action cannot be reverted. All my pictures and user reviews will be deleted. </h5>

        <%= link_to "Back", :back, class:"ui grey button right floated" %>

        <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class:"ui red button right floated", method: :delete %>
      </div>  
    </div>
  </div>
</div>
