<div class="ui modal" id="review">
  <i class="close icon"></i>
  <div class="header">
    Write a Review on <%= name%>
  </div>
  <div class="text content">
    <% if user_signed_in? && current_user.profile.nil? %>
      <div class="ui error message">
        <div class="header">You must create a user profile before reviewing.</div>
      </div>
    <% end %>
    <div class="ui form">
      <div class="field">
        <label>Rating</label>
        <div class="ui star rating" id="writeRating" data-max-rating="5"></div>
      </div>
      <div class="field">
        <label>Review Description</label>
        <textarea rows="3" id="comments" placeholder="Your review helps other."></textarea>
      </div>
    </div>
  </div>
  <div class="actions">
    <div class="ui black deny button">
      Cancel
    </div>
    <div class="ui positive right labeled icon button <%= 'disabled' if user_signed_in? && current_user.profile.nil? %>" id="postReviewBtn" >
      Send
      <i class="checkmark icon"></i>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  var review_subject = {
    id: <%= @pet.nil? ? @profile.id : @pet.id %>,
    type: "<%= @pet.nil? ? @profile.class.to_s : @pet.class.to_s %>"
  };

<% end %>